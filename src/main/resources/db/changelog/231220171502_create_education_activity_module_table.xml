<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="231220171502" author="Vlad">

        <createTable tableName="education_activity_module">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(500)" >
                <constraints nullable="false"></constraints>
            </column>
            <column name="etp_id" type="int">
                <constraints foreignKeyName="education_activity_module_etp_fk" references="etp(id)"></constraints>
            </column>
        </createTable>

        <createTable tableName="education_activity_section">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(500)" >
                <constraints nullable="false"></constraints>
            </column>
            <column name="education_activity_module_id" type="int">
                <constraints foreignKeyName="etp_education_activity_module_fk" references="education_activity_module(id)"/>
            </column>
            <column name="etp_plan_id" type="int">
                <constraints foreignKeyName="education_activity_section_etp_plan_fk" references="etp_plan(id)"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>